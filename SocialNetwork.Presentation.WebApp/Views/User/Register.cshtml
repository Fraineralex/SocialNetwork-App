@using SocialNetwork.Core.Application.ViewModels.Auth
@model SaveUserViewModel
@{
    ViewData["Title"] = "Sing up";
}

<main>
    <section class="container">
        <div class="row mx-auto">

            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-bold mt-4 text-center text-white"> Social Network App</h1>
                <p class="fs-3 fw-bold text-white-50 mt-1 text-center">
                    Welcome to Social Network App,create an account to
                    be able to navegate and interact whit the other users.
                </p>

                <div class="col-10 mx-auto card bg-dark text-white mt-5 mb-5" style="border-radius: 1rem;">
                    <div class="card-body">

                        <h2 class="fw-bold mb-3 text-uppercase text-center mt-2">Register</h2>
                        <p class="text-white-50 fs-5 mb-3 text-center">Please fill in all the fields below!</p>
                        @Html.ValidationMessage("singUpVaidation", "",new{@class = "text-danger text-center fw-bold fs-5 mb-3"}, "h4")

                        <form asp-action="Register" asp-controller="User" method="POST" EncType="multipart/form-data">

                            <div class="p-3 pt-0">
                                <label asp-for="Name" class="form-label text-white"><strong>Name <small class="text-danger"> *</small></strong></strong></label>
                                <input type="text" class="form-control bg-dark text-white border-white form-control-lg"
                                        asp-for="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="p-3 pt-0">
                                <label asp-for="LastName" class="form-label text-white"><strong>Last Name <small class="text-danger"> *</small></strong></strong></label>
                                <input type="text" class="form-control bg-dark text-white border-white form-control-lg"
                                       asp-for="LastName">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="p-3 pt-0">
                                <label asp-for="FileImage" class="form-label text-white"><strong>Profile Image<small class="text-danger"> *</small></strong></strong></label>
                                <input type="file" class="form-control bg-dark text-white border-white form-control-lg"
                                       asp-for="FileImage" accept="image/*">
                                <span asp-validation-for="FileImage" class="text-danger"></span>
                            </div>

                            <div class="p-3 pt-0">
                                <label asp-for="Email" class="form-label text-white"><strong>Email Adrees <small class="text-danger"> *</small></strong></strong></label>
                                <input type="email" class="form-control bg-dark text-white border-white form-control-lg"
                                       asp-for="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="p-3 pt-0">
                                <label asp-for="Phone" class="form-label text-white"><strong>Phone <small class="text-danger"> *</small></strong></strong></label>
                                <input type="text" class="form-control bg-dark text-white border-white form-control-lg"
                                       asp-for="Phone">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="p-3 pt-0">
                                <label asp-for="Username" class="form-label text-white"><strong>Username <small class="text-danger"> *</small></strong></strong></label>
                                <input type="text" class="form-control bg-dark text-white border-white form-control-lg"
                                        asp-for="Username">
                                <span asp-validation-for="Username" class="text-danger"></span>
                                @Html.ValidationMessage("userVaidation", "",new{@class = "text-danger"}, "span")
                            </div>

                            <div class="p-3 pt-0">
                                <label asp-for="Password" class="form-label text-white"><strong>Password <small class="text-danger"> *</small></strong></strong></label>
                                <input type="password" id="password"
                                        class="form-control bg-dark text-white border-white form-control-lg"
                                        asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="p-3 pt-0 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label text-white">
                                    <strong>
                                        Confirm
                                        Password <small class="text-danger"> *</small>
                                    </strong>
                                    </strong>
                                </label>
                                <input type="password"
                                        class="form-control bg-dark text-white border-white form-control-lg"
                                        id="confirmPassword" asp-for="ConfirmPassword">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button class="btn btn-primary btn-lg float-end" type="submit">
                                <i class='bx bxs-check-shield'></i>
                                Sing up
                            </button>
                            <a class="btn btn-light btn-lg float-end me-2" asp-controller="User" asp-action="Index">
                                <i class='bx bxs-left-arrow-circle'></i> Login
                            </a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </section>
</main>
