@using SocialNetwork.Core.Application.ViewModels.Friend
@model AddFriendSaveViewModel

@{
    ViewData["Title"] = "Add Friend";
}

<main>
    <section class="container">
        <div class="row mx-auto">

            <div class="col-lg-6 col-md-8 mx-auto">

                <div class="col-10 mx-auto card bg-dark text-white mt-5 mb-5" style="border-radius: 1rem;">
                    <div class="card-body">

                        <h2 class="fw-bold mb-3 text-uppercase text-center mt-2">Add a new friend</h2>
                        <p class="text-white-50 fs-5 mb-3 text-center">Please enter the username of your friend</p>
                        @Html.ValidationMessage("userVaidation", "",new{@class = "text-danger text-center fw-bold fs-5 mb-3"}, "h4")

                        <form asp-controller="AdminFriends" asp-action="AddFriend" method="POST">

                            <div class="p-3">
                                <label asp-for="Username" class="form-label text-white"><strong>Username <small class="text-danger"> *</small></strong></label>
                                <input type="text" class="form-control bg-dark text-white border-white form-control-lg"
                                    id="username" asp-for="Username">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <button class="btn btn-primary btn-lg float-end mt-4" type="submit">Add friend</button>
                            <a class="btn btn-light btn-lg float-end me-2 mt-4" asp-controller="AdminFriends" asp-action="Index">
                                Back
                            </a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    <section>
</main>
