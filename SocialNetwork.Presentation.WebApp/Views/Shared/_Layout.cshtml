<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialNetwork.Presentation.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SocialNetwork.Presentation.WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout-style.css" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="sidebar">
        <div class="logo-details">
            <i class='bx bx-notepad icon'></i>
            <div class="logo_name">To Do List</div>
            <i class='bx bx-menu' id="btn"></i>
        </div>

        <li>
            <i class='bx bx-search'></i>
            <input type="text" placeholder="Search...">
            <span class="custom-tooltip">Search</span>
        </li>
        <li>
            <a href="/home" class="bg-light">
                <i class='bx bx-home-alt text-dark'></i>
                <span class="links_name text-dark">Home</span>
            </a>`
            <span class="custom-tooltip">Home</span>
        </li>
        <li>
            <a href="/completed-tasks" class="">
                <i class='bx bx-check-square'></i>
                <span class="links_name">Friends</span>
            </a>
            <span class="custom-tooltip">Friends</span>
        </li>

        <li>
            <a href="/user-information" class="">
                <i class='bx bx-user'></i>
                <span class="links_name">User</span>
            </a>
            <span class="custom-tooltip">User</span>
        </li>
        <li class="profile">
            <div class="profile-details">
                <img src="/images/profile.jpg" alt="profileImg">
                <div class="name_job">
                    <div class="name"><small>Frainer Alexander</small></div>
                    <div class="job">frainer.alex</div>
                </div>
            </div>
            <a href="/logout"><i class='bx bx-log-out' id="log_out"></i></a>
        </li>
    </div>

    <section class="home-section">
        <main role="main" class="container pb-3">
            @RenderBody()
        </main>
    </section>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year Social Network App - Designed whit 💙 by Frainer Alexander
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/layoutScript.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
